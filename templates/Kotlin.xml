<templateSet group="Kotlin">
  <template name="sf" value="private val _$NAME$ = MutableStateFlow&lt;$TYPE$&gt;($DEFAULT_VALUE$)&#10;val $NAME$: StateFlow&lt;$TYPE$&gt; get() = _$NAME$" description="StateFlow" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="TYPE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="DEFAULT_VALUE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN_CLASS" value="true" />
      <option name="KOTLIN_TOPLEVEL" value="true" />
    </context>
  </template>
  <template name="enumf" value="fun from(type: String) = values().find { it.name == type } ?: $DEFAULT_VALUE$" description="Enum from string" toReformat="false" toShortenFQNames="true">
    <variable name="DEFAULT_VALUE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN_CLASS" value="true" />
    </context>
  </template>
  <template name="test" value="@Test&#10;fun `Given $GIVEN$, when $WHEN$, then $THEN$`() {&#10;    $END$&#10;}" description="JUnit Test - Given When Then" toReformat="false" toShortenFQNames="true">
    <variable name="GIVEN" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="WHEN" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="THEN" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN_CLASS" value="true" />
    </context>
  </template>
  <template name="sofi" value="suspend operator fun invoke($ARG$: $ARG_TYPE$): $RETURN_TYPE$ " description="Suspend operator fun invoke()" toReformat="false" toShortenFQNames="true">
    <variable name="ARG" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="ARG_TYPE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="RETURN_TYPE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN_CLASS" value="true" />
      <option name="KOTLIN_TOPLEVEL" value="true" />
    </context>
  </template>
</templateSet>